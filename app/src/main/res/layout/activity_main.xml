<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:text="@string/my_nanodegree_apps"
        android:textSize="24sp"
        android:textColor="#ff5e5e5e"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="72dp"
        android:layout_below="@id/textView"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/spotify_streamer"
            android:id="@+id/button1"
            android:background="#F08C35"
            android:onClick="launchSpotifyStreamer"/>
        />
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/scores_app"
            android:id="@+id/button2"
            android:background="#F08C35"
            android:layout_marginTop="10dp"
            android:onClick="launchScoresApp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/library_app"
            android:id="@+id/button3"
            android:background="#F08C35"
            android:layout_marginTop="10dp"
            android:onClick="launchLibraryApp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/build_it_bigger"
            android:id="@+id/button4"
            android:background="#F08C35"
            android:layout_marginTop="10dp"
            android:onClick="launchBuildItBigger"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/xyz_reader"
            android:id="@+id/button5"
            android:background="#F08C35"
            android:layout_marginTop="10dp"
            android:onClick="launchXYZReader"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/capstone_my_own_app"
            android:id="@+id/button6"
            android:background="#fff00013"
            android:textColor="#ffffffff"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:onClick="launchCapstoneApp"/>
    </LinearLayout>
</RelativeLayout>